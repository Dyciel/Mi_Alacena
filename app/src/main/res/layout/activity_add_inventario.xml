<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/autummBg"
    tools:context=".AddInventario">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:background="@color/winter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Mi Alacena"
        app:titleMargin="4dp"
        app:titleMarginStart="150dp"
        app:titleTextColor="@color/btnColor" />

    <EditText
        android:id="@+id/lista"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:background="@color/alacenalogo1_background"
        android:hint="  Ingrese producto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="349dp"
        android:layout_height="72dp"
        android:fontFamily="cursive"
        android:text="@string/InventarioTitle"
        android:textAlignment="center"
        android:textColor="@color/btnColor"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="62dp"
        android:layout_height="52dp"
        android:backgroundTint="@color/btnColor"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.942" />

    <ListView
        android:id="@+id/listaObjetos"
        android:layout_width="360dp"
        android:layout_height="359dp"
        android:background="@color/alacenalogo1_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758" />

</androidx.constraintlayout.widget.ConstraintLayout>