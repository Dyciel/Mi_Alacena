<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="465dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Sección de idiomas -->

        <Button
            android:id="@+id/btnLanguages"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/IdiomaText"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/container_languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Opciones de idiomas -->
            <Button
                android:id="@+id/btnSpanish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cambiarIdioma"
                android:text="Español" />

            <Button
                android:id="@+id/btnEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cambiarIdioma"
                android:text="English" />
            <!-- Puedes agregar más opciones de idiomas si es necesario -->

        </LinearLayout>

        <!-- Sección de cambio de tema -->

        <LinearLayout
            android:id="@+id/container_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Agregar aquí las opciones para seleccionar la paleta de colores -->
            <Button
                android:id="@+id/btnColorOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color Option 1" />

            <Button
                android:id="@+id/btnColorOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color Option 2" />

            <!-- Puedes agregar más opciones de paletas de colores si es necesario -->

        </LinearLayout>

        <Button
            android:id="@+id/btnTheme"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/TemaText"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>